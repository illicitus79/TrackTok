[flake8]
max-line-length = 100
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    alembic/versions,
    migrations/versions
ignore =
    E203,  # whitespace before ':'
    E266,  # too many leading '#' for block comment
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator
    F401,  # module imported but unused (handled separately)
per-file-ignores =
    __init__.py:F401,F403
    */migrations/*:E501
max-complexity = 10
